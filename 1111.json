        "POST /api/pet/:id/update": {
            "info": {
                "summary": "修改 by POST JSON",
                "module": "接口配置示例-RESTFul",
                "description": "有些 REST 接口可能不能完全遵循 HTTP verb",
                "author": "Swagger"
            },

            "request": {
                "header": {
                    "Content-Type": "application/json"
                },
                "body": {
                    "id": 0,
                    "name": "doggie"
                }
            },

            "response": {
